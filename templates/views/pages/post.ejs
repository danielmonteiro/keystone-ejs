<%- include('../partials/head') %>

<div class="container"><%- include('../partials/header') %></div>
<div class="container">
	<div class="row">
		<div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
			<article>
				<p><a href="/blog">&larr; back to the blog</a></p>
				<hr>
				<% if ( !data.post ) { %>
					<h2>Invalid Post.</h2>
				<% } else { %>
					<header>
						<h1><%= data.post.title %></h1>
						<h5>
							Posted
							<% if ( data.post.publishedDate ) { %>
								on <%= data.post._.publishedDate.format('MMMM Do, YYYY') %>
							<% } %>
							<% if ( data.post.categories && data.post.categories.length ) { %>
								in
								<% data.post.categories.forEach(function ( category, i ) { %>
									<a href="/blog/<%= category.key %>"><%= category.name %></a><% if ( i < data.post.categories.length -1 ) { %>, <% } %>
								<% }) %>
							<% } %>
							<% if ( data.post.author ) { %>
								by <%= data.post.author.name.first %>
							<% } %>
						</h5>
					</header>
					<div class="post">
						<% if ( data.post.image.exists ) { %>
							<div class="image-wrap">
								<img src="<%= data.post._.image.fit(750,450) %>" class="img-responsive">
							</div>
							<%- data.post.content.full %>
						<% } %>
					</div>
				<% } %>
			</article>
		</div>
	</div>
</div>
<div class="container"><%- include('../partials/footer') %></div>
